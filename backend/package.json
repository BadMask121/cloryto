{
  "name": "cloryto",
  "version": "1.0.0",
  "description": "cloryto",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": "12"
  },
  "scripts": {
    "prepare": "npm run build",
    "lint": "tslint -p",
    "start": "node ./dist/backend/src/app.js",
    "build": "tsc -p .",
    "clean": "rm -rf ./dist",
    "deploy": "npm run clean && npm run build && gcloud app deploy --project tweq-5cbdb",
    "start:local": "npm run build && pm2 restart ecosystem.config.js --only dev",
    "start:prod": "npm run build && pm2 restart ecosystem.config.js --only prod",
    "dev": "set NODE_ENV=development && nodemon --watch 'src/**/*.ts' --exec ts-node src/app.ts",
    "build:live": "nodemon --watch 'src/**/*.ts' --exec ts-node src/app.ts",
    "test": "mocha --exit **/*.test.js",
    "logs:functions": "cd ./functions && yarn logs"
  },
  "devDependencies": {
    "@types/connect-timeout": "^0.0.34",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.7.37",
    "@types/node": "^13.7.0",
    "@types/node-fetch": "^2.5.7",
    "@types/redis": "^2.8.21",
    "@types/shortid": "0.0.29",
    "cross-env": "^7.0.0",
    "mocha": "^7.0.0",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2"
  },
  "dependencies": {
    "@colony/colony-js": "2",
    "@types/node-schedule": "^1.3.1",
    "bcryptjs": "^2.4.3",
    "camelcase": "^6.0.0",
    "connect-timeout": "^1.9.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "ethers": "4",
    "express": "*",
    "express-validator": "^6.3.1",
    "firebase-admin": "^9.3.0",
    "firebase-functions": "^3.11.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.26.0",
    "moment-timezone": "^0.5.31",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "node-schedule": "^1.3.2",
    "pm2": "^4.4.1",
    "pusher": "^3.0.1",
    "redis": "^3.0.2",
    "shortid": "^2.2.15",
    "tspath": "^1.3.7",
    "typescript": "^3.9.3"
  }
}
